{
  "private": true,
  "scripts": {
    "build:sass": "sass --no-source-map -s compressed style:_site/img",
    "build:site": "eleventy",
    "build": "run-p build:*",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:site": "npm run build:site -- --serve",
    "start": "run-p watch:*",
    "clean": "rimraf _site",
    "opt": "svgo --multipass -f img"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "markdown-it-anchor": "^5.2.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "sass": "^1.25.0",
    "svgo": "^1.3.2"
  }
}
